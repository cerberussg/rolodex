<tr>
  <td class="middle">
    <div class="media">
      <div class="media-left">
        <a href="#">
          <% if contact.image.attached? %>
            <%= image_tag contact.image, class: "media-object", style: "width:100px; height:100px;" %>
          <% else %>
            <%= image_tag contact.gravatar, class: "media-object" %>
          <% end %>
        </a>
      </div>
      <div class="media-body">
        <h4 class="media-heading"><%= contact.name %></h4>
        <address>
          <strong><%= contact.company %></strong><br>
          <%= contact.email %>
        </address>
      </div>
    </div>
  </td>
  <td width="100" class="middle">
    <div>
      <%= link_to edit_contact_path(contact), class: "btn btn-default btn-circle btn-xs",
      title: "edit" do %>
        <i class="glyphicon glyphicon-edit"></i>
      <% end %>
      <a href="#" class="btn btn-circle btn-danger btn-xs" title="Edit">
        <i class="glyphicon glyphicon-remove"></i>
      </a>
    </div>
  </td>
</tr>
