<tr>
  <td class="middle">
    <div class="media">
      <div class="media-left">
        <a href="#">
          <% if contact.image.attached? %>
            <%= image_tag contact.image, class: "media-object", style: "width:100px; height:100px;" %>
          <% else %>
            <%= image_tag 'default_image.png', class: "media-object", style: "width:100px; height:100px;" %>
          <% end %>
        </a>
      </div>
      <div class="media-body">
        <h4 class="media-heading"><%= contact.name %></h4>
        <address>
          <strong><%= contact.company %></strong><br>
          <%= contact.email %>
        </address>
      </div>
    </div>
  </td>
  <td width="100" class="middle">
    <div>
      <%= link_to edit_contact_path(contact), class: "btn btn-default btn-circle btn-xs", title: "Edit" do %>
        <i class="glyphicon glyphicon-edit" style="vertical-align: middle;"></i>
      <% end %>
      <%= link_to contact_path(contact), class: "btn btn-circle btn-danger btn-xs", method: :delete,
          title: "Delete", data: { confirm: "Are you sure?" } do %>
        <i class="glyphicon glyphicon-remove" style="vertical-align: middle;"></i>
      <% end %>
    </div>
  </td>
</tr>
